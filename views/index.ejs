<%- include("partials/header.ejs") %>

<div class="container center_main" style="height: 75.5vh;">
  <div class="container2 p-5">
      <div class="row h-100 d-flex justify-content-center align-items-center">
        
        <div class="col-md-4 h-100 text-center left-box">
          <div class="row h-50 d-flex justify-content-center align-items-center first-block">
              <div class="text-center">
                <h1 class="main-temp mb-0"><%= temp %></h1><p class="degree">&#8451</p>
                <h4 class="py-0 weather-style"><%= weatherType %></h4>
              </div>
          </div>
          <div class="row h-50 d-flex justify-content-center align-items-center second-block">
              <div class="col-12 d-flex text-center">
                <div class="col-6 h-50">
                  <div class="hum-wspeed">
                    Humidity
                  </div>
                    <div class="hum-wspeed-d">
                      <%= humidity %>%
                    </div>
                </div>
                <div class="col-6 h-50">
                  <div class="hum-wspeed">
                    wind speed
                  </div>
                  <div class="hum-wspeed-d">
                    <%= windSpeed %>Kmph
                  </div>
                </div>
              </div>
              <div class="col-12 d-flex text-center">
                <div class="col-6 h-50">
                  <div class="hum-wspeed">
                    feels like
                  </div>
                    <div class="hum-wspeed-d">
                      <%= feelsLike %>&#8451;
                    </div>
                </div>
                <div class="col-6 h-50">
                  <div class="hum-wspeed">
                    visibility
                  </div>
                  <div class="hum-wspeed-d">
                    <%= visibility %>Km
                  </div>
                </div>
              </div>  
          </div>
        </div>
        
        <div class="col-md-8 h-100 third-block">
            <div class="location mt-2 mb-3">
              <%= location %>
            </div>
            <div class="detail">
              <div class="hum-wspeed-d">
                <%= date[0] %> 
              </div>
              <div class="hum-wspeed-d">
                <%= min_max %> &#8451;
              </div>
              <div class="d-flex mb-0">
               <p class="hum-wspeed mb-0">Pressure :</p>
                <p class="hum-wspeed-d mb-0"><%= pressure %> hPa</p>
              </div>
              <div class="d-flex mt-0">
                <p class="hum-wspeed mt-0">Rain Chances :</p>
                 <p class="hum-wspeed-d mt-0"><%= rain_chances %>%</p>
               </div>
            </div>

            <div class="container five-days d-flex" style="justify-content: space-between; align-items: center;">

              <% for(let i = 8;i<item.length;i=i+8) { %>
                <div class="card card-no-border card-outer" style="width: 10rem; height: 12rem;">
                  <div class="card-header text-center card-no-border">
                    <% if (i/8==1) { %>
                     Tomorrow
                    <% }else { %>
                      <%= date[i/8] %>
                    <% } %>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center card-no-border"><%= Math.floor(item[i].main.temp-273) %>&#8451</li>
                    <li class="list-group-item text-center card-no-border">feels like : <%= Math.floor(item[i].main.feels_like-273) %>&#8451</li>
                    <li class="list-group-item text-center card-no-border"><%= item[i].weather[0].description %></li>
                  </ul>
                </div>
                <% } %>
              
            </div>
          
        </div>
      </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>